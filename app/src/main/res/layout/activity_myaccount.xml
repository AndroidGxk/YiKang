<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.myaccount.MyaccountActivity">

    <RelativeLayout
        android:id="@+id/toolbar_activity_myaccount"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/toolbar">

        <ImageView
            android:id="@+id/img_activity_myaccount_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/fanhuiactivity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的账户"
            android:textColor="#000000"
            android:textSize="19sp" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_activity_myaccount"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#FFFF"
        app:tabIndicatorColor="@color/colorToolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager_activity_myaccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>