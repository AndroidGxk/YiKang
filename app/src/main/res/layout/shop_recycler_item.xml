<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/shop_recycler_shape">

    <CheckBox
        android:id="@+id/check_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="30dp"
        android:button="@drawable/check_selector"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <ImageView
        android:id="@+id/shop_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/check_btn"
        android:src="@drawable/ce4" />

    <TextView
        android:id="@+id/shop_count"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/shop_img"
        android:text="韩国JM牛油果精油面膜男女 韩国JM牛油果精油面膜男女"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/num_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@+id/shop_count"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/shop_img"
        android:background="@drawable/shop_text_shape"
        android:gravity="center"
        android:padding="3dp"
        android:text="1件  10片"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/shop_img"
        android:text="¥ 85.00"
        android:textColor="#FF0000"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/jia_btn"
        android:src="@drawable/jian" />

    <ImageView
        android:id="@+id/jia_btn"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/jia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/jia_btn"
        android:text="1"
        android:textColor="#333333"
        android:textSize="13sp" />
</RelativeLayout>
