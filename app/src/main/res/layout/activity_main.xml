<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toobar"
            layout="@layout/toolbar"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toobar"
            android:background="#f3f3f3"
            android:clipToPadding="true"
            android:layout_marginBottom="5dp"
            android:fitsSystemWindows="true" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/biaotilan"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shou_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/shou"
                    android:layout_width="29dp"
                    android:layout_height="27dp"
                    android:background="@drawable/radio_sele_shou"
                    android:button="@null"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/shou_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textColor="@color/colorTab" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fen_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/fen"
                    android:layout_width="29dp"
                    android:layout_height="26dp"
                    android:background="@drawable/radio_sele_fen"
                    android:button="@null"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fen_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/miao_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/miao"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/miaosha"
                    android:button="@null"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/miao_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒杀"
                    android:textColor="#333333"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gou_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/gou"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@drawable/radio_sele_gou"
                    android:button="@null" />

                <TextView
                    android:id="@+id/gou_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物车"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wo_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/wo"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@drawable/radio_sele_wo"
                    android:button="@null" />

                <TextView
                    android:id="@+id/wo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textColor="#333333" />
            </LinearLayout>
        </RadioGroup>
    </RelativeLayout>
    <!--抽屉部分-->
    <android.support.design.widget.NavigationView
        android:id="@+id/nv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/header"
        app:itemBackground="@drawable/selecotor_drawer_menu_bg"
        app:menu="@menu/drawer_menu" />
</android.support.v4.widget.DrawerLayout>
