<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toobar"
            layout="@layout/toolbar"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toobar"
            android:layout_marginBottom="5dp"
            android:background="#f3f3f3"
            android:clipToPadding="true"
            android:fitsSystemWindows="true" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/biaotilan"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shou_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/shou"
                    android:layout_width="29dp"
                    android:layout_height="27dp"
                    android:background="@drawable/radio_sele_shou"
                    android:button="@null"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/shou_text"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textColor="@color/colorTab" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fen_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/fen"
                    android:layout_width="29dp"
                    android:layout_height="26dp"
                    android:background="@drawable/radio_sele_fen"
                    android:button="@null"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fen_text"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/miao_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/miao"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/miaosha"
                    android:button="@null"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/miao_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒杀"
                    android:textColor="#333333"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gou_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/gou"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@drawable/radio_sele_gou"
                    android:button="@null" />

                <TextView
                    android:id="@+id/gou_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物车"
                    android:textSize="10sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wo_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/wo"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@drawable/radio_sele_wo"
                    android:button="@null" />

                <TextView
                    android:id="@+id/wo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textSize="10sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </RadioGroup>
    </RelativeLayout>
    <!--抽屉部分-->


    <RelativeLayout
        android:id="@+id/nv"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFB42B">

        <ImageView
            android:id="@+id/header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/header_img" />

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="40dp"
            android:text="雅静静"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_name"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dingdan"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/dingdan" />

            <TextView
                android:id="@+id/dingdan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="我的订单"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zhanghao"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/zhanghao" />

            <TextView
                android:id="@+id/zhanghao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="我的账号"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zhanghu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/zhanghu" />

            <TextView
                android:id="@+id/zhanghu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="账户明细"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shouhuo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/dizhi" />

            <TextView
                android:id="@+id/shouhuo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="收货地址"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line4"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bangzhu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bangzhuzhongxin" />

            <TextView
                android:id="@+id/bangzhu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="帮助中心"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_marginTop="85dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tuichu"
                android:layout_width="21dp"
                android:layout_height="17dp"
                android:background="@drawable/tuichu" />

            <TextView
                android:id="@+id/tuichu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="退出登录"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/beijingtu" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
