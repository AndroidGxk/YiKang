<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/jiaoyi_recycler_shape"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <android.support.constraint.Guideline
        android:id="@+id/left_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <android.support.constraint.Guideline
        android:id="@+id/top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/bottom_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <android.support.constraint.Guideline
        android:id="@+id/check_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <ImageView
        android:id="@+id/wuliu_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/kefu_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/left_line"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#ff333333"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/wuliu_img"
        app:layout_constraintTop_toBottomOf="@+id/top_line" />

    <TextView
        android:id="@+id/wu_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#ff999999"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@+id/wuliu_img"
        app:layout_constraintTop_toBottomOf="@+id/bottom_line" />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="@id/check_line"
        app:layout_constraintTop_toBottomOf="@+id/top_line" />

    <CheckBox
        android:id="@+id/check_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/xuanze_gr"
        android:button="@null"
        app:layout_constraintRight_toRightOf="@id/check_line"
        app:layout_constraintTop_toBottomOf="@+id/data_text" />
</android.support.constraint.ConstraintLayout>
