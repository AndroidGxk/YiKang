<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="131dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/dizi_beijing">


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="33dp"
        android:text=""
        android:textSize="19sp" />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginRight="15dp"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="15dp"
        android:text=""
        android:layout_marginRight="15dp"
        android:textColor="#ff999999"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/moren"
        android:layout_width="65dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/select_radio_address"
        android:button="@null" />

    <RelativeLayout
        android:id="@+id/compile_btn"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_toLeftOf="@+id/dele_rela"
        android:gravity="center">

        <ImageView
            android:id="@+id/xie"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:background="@drawable/xie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/xie"
            android:text="编辑"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dele_rela"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:background="@drawable/sc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/delete"
            android:text="删除"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>