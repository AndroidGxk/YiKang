<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_fragment_all_bianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="订单编号:0000000000000000"
            android:textColor="#333333"
            android:textSize="8.5sp" />

        <TextView
            android:id="@+id/tv_fragment_all_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:text="2019-05-25 00:00"
            android:textColor="#333333"
            android:textSize="8.5sp" />

        <TextView
            android:id="@+id/tv_fragment_all_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:text="交易关闭"
            android:textColor="@color/colorToolbar"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/img_fragment_all_shanchu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/shanchu_h" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_fragment_all_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_fragment_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="65dp"
            android:text="合计：¥000000000.00"
            android:textColor="#333333"
            android:layout_toLeftOf="@+id/img_querenshouhuo"
            android:visibility="visible"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/img_querenshouhuo"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/querenshouhuo"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>