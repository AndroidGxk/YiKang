<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="238dp"
    android:layout_gravity="center"
    android:layout_marginLeft="2.5dp"
    android:layout_marginRight="2.5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/moblie_editext_5_shape_left">

    <android.support.constraint.Guideline
        android:id="@+id/imgbuttom_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <android.support.constraint.Guideline
        android:id="@+id/title_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <android.support.constraint.Guideline
        android:id="@+id/count_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <android.support.constraint.Guideline
        android:id="@+id/price_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/title_left_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <android.support.constraint.Guideline
        android:id="@+id/buy_left_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <android.support.constraint.Guideline
        android:id="@+id/yuanprice_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />

    <android.support.constraint.Guideline
        android:id="@+id/img_right_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <ImageView
        android:id="@+id/good_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintBottom_toTopOf="@id/imgbuttom_line"
        app:layout_constraintLeft_toRightOf="@+id/title_left_line"
        app:layout_constraintRight_toLeftOf="@id/img_right_line"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/good_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text="JMSOLUTIO蜂蜜蚕丝面...."
        android:textColor="#ff333333"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/title_left_line"
        app:layout_constraintTop_toBottomOf="@id/title_top_line" />

    <TextView
        android:id="@+id/good_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text="JMSOLUTION蜂蜜蚕丝面膜网..."
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/title_left_line"
        app:layout_constraintTop_toBottomOf="@id/count_top_line" />

    <TextView
        android:id="@+id/good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内购价：￥286"
        android:textColor="#ffff1a1a"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/title_left_line"
        app:layout_constraintTop_toBottomOf="@id/price_top_line" />

    <TextView
        android:id="@+id/good_yuanprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="市场价：￥286"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/title_left_line"
        app:layout_constraintTop_toBottomOf="@id/yuanprice_top_line" />

    <TextView
        android:id="@+id/good_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234人已购"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/buy_left_line"
        app:layout_constraintTop_toBottomOf="@id/yuanprice_top_line" />
</android.support.constraint.ConstraintLayout>
