<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/design_pop_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:id="@+id/design_pop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="从业:3年" />

        <TextView
            android:id="@+id/design_pop_xuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="个人宣言:光和影改变世界" />

        <TextView
            android:id="@+id/design_pop_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="美国西海岸最具有争议的设计师" />

        <RelativeLayout
            android:layout_width="218dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="400-838-8816"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/header_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_above="@+id/content_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-30dp">

        <ImageView
            android:id="@+id/design_pop_head"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="32dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/design_pop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/design_pop_head"
            android:text="设计师:贝津铭"
            android:textSize="16dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/design_pop_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/content_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>