<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zhuce_bg"
    tools:context=".activity.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="248dp"
        android:src="@drawable/shouji" />

    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="246dp"
        android:background="@null"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="#666666"
        android:textColorHint="#666666"
        android:textSize="13sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/phone_edit"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="43dp"
        android:background="#CCCCCC" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="322dp"
        android:src="@drawable/mima" />

    <EditText
        android:id="@+id/pwd_edit"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="42dp"
        android:background="@null"
        android:hint="请输入密码"
        android:textColor="#666666"
        android:inputType="textPassword"
        android:textColorHint="#666666"
        android:textSize="13sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/pwd_edit"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="42dp"
        android:background="#CCCCCC" />

    <TextView
        android:id="@+id/forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="40dp"
        android:paddingLeft="15dp"
        android:text="忘记密码？"
        android:textColor="#999999"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/reg_image"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号，"
            android:textColor="#ff999999"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去注册"
            android:textColor="#FE8674"
            android:textSize="11sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/log_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="426dp"
        android:background="@drawable/jianbian">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>