<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="161dp"
    android:layout_height="250dp"
    android:background="#FFFFFF">

    <android.support.constraint.Guideline
        android:id="@+id/img_bottom_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <android.support.constraint.Guideline
        android:id="@+id/title_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <android.support.constraint.Guideline
        android:id="@+id/title_left_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <android.support.constraint.Guideline
        android:id="@+id/count_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <android.support.constraint.Guideline
        android:id="@+id/price_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/yuanprice_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />

    <android.support.constraint.Guideline
        android:id="@+id/buy_left_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <ImageView
        android:id="@+id/recom_img"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        app:layout_constraintBottom_toTopOf="@+id/img_bottom_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recom_title"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="JMSOLUTIO蜂蜜蚕丝面...."
        android:textColor="#333333"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@+id/title_left_line"
        app:layout_constraintTop_toBottomOf="@+id/title_top_line" />

    <TextView
        android:id="@+id/recom_count"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="JMSOLUTION蜂蜜蚕丝面膜网"
        android:textColor="#999999"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/title_left_line"
        app:layout_constraintTop_toBottomOf="@+id/count_top_line" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/title_left_line"
        app:layout_constraintTop_toBottomOf="@+id/price_top_line">

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内购价：¥"
            android:textColor="#FF1A1A"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recom_count"
            android:layout_marginLeft="2dp"
            android:text="286"
            android:textColor="#FF1A1A"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_bprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:text="市场价：¥296"
        android:textColor="#999999"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/title_left_line"
        app:layout_constraintTop_toBottomOf="@+id/yuanprice_top_line" />


    <TextView
        android:id="@+id/tv_yigou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="1234人已购"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/buy_left_line"
        app:layout_constraintTop_toBottomOf="@+id/yuanprice_top_line" />
</android.support.constraint.ConstraintLayout>
