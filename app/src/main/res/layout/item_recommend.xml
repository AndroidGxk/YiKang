<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="161dp"
    android:layout_height="238dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/recom_img"
        android:layout_width="181dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:background="#ffff" />

    <TextView
        android:id="@+id/recom_title"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="JMSOLUTIO蜂蜜蚕丝面...."
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/recom_count"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="JMSOLUTION蜂蜜蚕丝面膜网"
        android:textColor="#999999"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom_count"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内购价：¥"
            android:textColor="#FF1A1A"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recom_count"
            android:layout_marginLeft="2dp"
            android:text="286"
            android:textColor="#FF1A1A"
            android:textSize="12sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="15dp"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/text_bprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:text="市场价：¥296"
            android:textColor="#999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_yigou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="1234人已购"
            android:textColor="#999999"
            android:textSize="11sp" />
    </RelativeLayout>
</RelativeLayout>
