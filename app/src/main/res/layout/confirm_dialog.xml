<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/moblie_editext_5_shape_left"
    android:padding="15dp">

    <TextView
        android:id="@+id/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="确认要离开收银台？"
        android:textColor="@color/colorText"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/text_two"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="您的订单在0小时29分钟内未支付将取消请尽快完成" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_two"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/jixu_btn"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/yellow_pay_shape"
            android:gravity="center"
            android:text="继续支付"
            android:textColor="@color/colorTab" />

        <TextView
            android:id="@+id/likai_btn"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_below="@+id/text_two"
            android:background="@drawable/yellow_pay_shi_shape"
            android:gravity="center"
            android:text="确认离开"
            android:textColor="@color/clolrBAai" />
    </LinearLayout>
</RelativeLayout>