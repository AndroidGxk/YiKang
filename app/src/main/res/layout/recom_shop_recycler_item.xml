<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="161dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:background="#FFFFFF"
    android:layout_height="255dp">

    <ImageView
        android:id="@+id/recom_img"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ce4" />

    <TextView
        android:id="@+id/recom_title"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="JMSOLUTIO蜂蜜蚕丝面...."
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/recom_count"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="JMSOLUTION蜂蜜蚕丝面膜网"
        android:textColor="#999999"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="内购价：¥286"
        android:textColor="#FF1A1A"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="15dp"
        android:layout_below="@+id/text_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/text_bprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="市场价：¥296"
            android:textColor="#999999"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="1234人已购"
            android:textColor="#999999"
            android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>
