<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/tabbackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/daohang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="优选商城"
            android:textColor="#000000"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/sousuo" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">


            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_below="@+id/table"
                android:background="@drawable/ic_launcher_background" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_below="@+id/banner"
                android:layout_marginTop="9dp"
                android:background="@drawable/ic_launcher_background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="爆款专区"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bao_geng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="查看更多 >"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </RelativeLayout>

            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/bao_mzbanner"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/ic_launcher_background" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/bao_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="0dp"
                    android:text="奢侈品专区"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/she_geng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="查看更多 >"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </RelativeLayout>

            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/she_mzbanner"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/ic_launcher_background" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="0dp"
                    android:text="美妆专区"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mei_geng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="查看更多 >"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/ic_launcher_background" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mei_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
