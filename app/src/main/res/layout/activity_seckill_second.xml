<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/toolbar">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/fanhuiactivity" />

        <TextView
            android:id="@+id/toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="秒杀专区"
            android:textColor="#222"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="14dp"
            android:background="@drawable/sousuo" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/miao_background"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="7dp"
        android:background="@drawable/miao_background" />

    <TextView
        android:id="@+id/text_xia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miao_background"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:text="抢购中，先下单先得哦"
        android:textColor="#000000"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/text_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miao_background"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/text_xia"
        android:text="距结束" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miao_background"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/text_over"
        android:orientation="horizontal">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/feng_btn_yellow"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="天"
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/feng_btn_yellow"
            android:gravity="center"
            android:text="23"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text=":"
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/feng_btn_yellow"
            android:gravity="center"
            android:text="23"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text=":"
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/feng_btn_yellow"
            android:gravity="center"
            android:text="23"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <View
        android:id="@+id/cut_off"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_xia"
        android:layout_marginTop="10dp"
        android:background="#D9D9D9" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cut_off"
        android:overScrollMode="never" />
</RelativeLayout>
