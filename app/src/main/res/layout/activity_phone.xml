<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activity.myaccount.PhoneActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_phone"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/toolbar">

        <ImageView
            android:id="@+id/img_activity_phone_fanhui"
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:src="@drawable/fanhuiactivity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="更换手机号码"
            android:textColor="#000000"
            android:textSize="19sp" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_activity_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="当前手机号:13800000000"
        android:textColor="#ff999999"
        android:textSize="12sp" />

    <TextView
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="258dp"
        android:background="@drawable/shop_btn_shape"
        android:gravity="center"
        android:text="保存"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</RelativeLayout>