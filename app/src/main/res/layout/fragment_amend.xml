<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/yanzhengma">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12sp"
            android:text="手机号"
            android:textColor="#333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/EditTixt_activity_seek_sousuo"
            android:layout_width="86dp"
            android:layout_height="13dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:hint="请输入手机号码"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="241dp"
            android:text="59秒后重发"
            android:textColor="#999999" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xiugaimima_yuan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="短信验证码"
            android:textColor="#333333" />

        <EditText
            android:layout_width="188dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:hint=""
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xiugaimima_yuan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="原密码"
            android:textColor="#333333" />

        <EditText
            android:layout_width="188dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:hint=""
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xiugaimima_yuan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="新密码"
            android:textColor="#333333" />

        <EditText
            android:layout_width="188dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:hint=""
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="11sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xiugaimima_yuan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="确认新密码"
            android:textColor="#333333" />

        <EditText
            android:layout_width="188dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:hint=""
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="11sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reLayout_fragment_basic_save"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="161dp"
        android:background="@drawable/baocunxinxi">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保存信息"
            android:textColor="@color/clolrBAai"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>