<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/seek_edi_shape">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="支付方式"
        android:textColor="#ff333333"
        android:textSize="14sp" />


    <RelativeLayout
        android:id="@+id/wechat_pay"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/yellow_pay_shape"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/wei_img"
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/weixinzhifu_sele" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/wei_img"
            android:text="微信" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zhi_rela"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/wechat_pay"
        android:background="@drawable/gray_pay_shape"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/zhi_img"
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/zhifubaozhifu_sele" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/zhi_img"
            android:text="支付宝" />
    </RelativeLayout>

    <TextView
        android:id="@+id/wan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shop_btn_shape"
        android:gravity="center"
        android:text="完成"
        android:textColor="#fffefefe"
        android:textSize="14sp" />
</RelativeLayout>
