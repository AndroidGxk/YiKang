<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:background="#FFFFFF"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/recom_img_b"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ce4" />

    <TextView
        android:id="@+id/recom_title_b"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom_img_b"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="JMSOLUTIO蜂蜜蚕丝面...."
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/recom_count_b"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom_title_b"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="JMSOLUTION蜂蜜蚕丝面膜网"
        android:textColor="#999999"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="130dp"
        android:id="@+id/line1_b"
        android:layout_below="@+id/recom_count_b"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/text_price_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内购价：¥"
            android:textColor="#FF1A1A"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_jiage_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recom_count_b"
            android:text="286"
            android:layout_marginLeft="2dp"
            android:textColor="#FF1A1A"
            android:textSize="12sp" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="15dp"
        android:layout_below="@+id/line1_b"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/text_bprice_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="市场价：¥296"
            android:textColor="#999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_yigou_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="1234人已购"
            android:textColor="#999999"
            android:textSize="11sp" />
    </RelativeLayout>
</RelativeLayout>
