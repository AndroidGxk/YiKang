<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:descendantFocusability="blocksDescendants"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:background="@drawable/wodebeijing" />

            <ImageView
                android:id="@+id/img_fragment_wo_lingdang"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/lingdang" />

            <ImageView
                android:id="@+id/img__fragment_wo_hongyuanquan_a"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/hong" />

            <TextView
                android:id="@+id/tv_fragment_wo_xiaoxi_a"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="12dp"
                android:text="01"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/img_fragment_wo_touxiang"
                android:layout_width="62dp"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:src="@drawable/touxiang_2" />

            <TextView
                android:id="@+id/tv__fragment_wo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="105dp"
                android:text="登录 | 注册"
                android:textColor="#333333 "
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="144dp"
                android:text="全部订单"
                android:textColor="#717171" />

            <TextView
                android:id="@+id/tv_fragment_wo_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="144dp"
                android:layout_marginRight="27dp"
                android:text="查看全部订单"
                android:textColor="#717171 " />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="150dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="167dp"
                android:layout_marginRight="19dp">

                <LinearLayout
                    android:id="@+id/img_fragment_wo_daifukuan"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/yizhifu" />

                        <ImageView
                            android:id="@+id/img_fragment_wo_hongyuanquan_b"
                            android:layout_width="13dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="38dp"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/hong" />

                        <TextView
                            android:id="@+id/tv_fragment_wo_xiaoxi_b"
                            android:layout_width="13dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="9.5dp"
                            android:text="01"
                            android:textColor="#FFFFFF"
                            android:textSize="9sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="54dp"
                            android:text="待付款"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/img_fragment_wo_yizhifu"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/daifukuan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="54dp"
                            android:text="已支付"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/img__fragment_wo_yiquxiao"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/yiquxiao" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="54dp"
                            android:text="已取消"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/img_fragment_wo_yituikuan"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/yituikuan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="54dp"
                            android:text="退款/售后"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_fragment_wo_guanggao"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/guanggao" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/bai"
            android:orientation="horizontal"
            android:paddingLeft="28.5dp"
            android:paddingRight="28.5dp">

            <LinearLayout
                android:id="@+id/img_fragment_wo_mingxi"
                android:layout_width="0dp"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp"
                        android:src="@drawable/mingxi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="51dp"
                        android:text="账号明细"
                        android:textColor="#333333"
                        android:textSize="11sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_fragment_wo_dizi"
                android:layout_width="0dp"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp"
                        android:src="@drawable/dizi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="51dp"
                        android:text="收货地址"
                        android:textColor="#333333"
                        android:textSize="11sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/img__fragment_wo_guanyu"
                android:layout_width="0dp"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp"
                        android:src="@drawable/guanyu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="51dp"
                        android:text="关于APP"
                        android:textColor="#333333"
                        android:textSize="11sp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/img__fragment_wo_tuichudenglu"
                android:layout_width="0dp"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp"
                        android:src="@drawable/tuichudenglu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="51dp"
                        android:text="退出登录"
                        android:textColor="#333333"
                        android:textSize="11sp" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/tuijian" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv__fragment_wo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="84dp"
            android:focusable="false"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
