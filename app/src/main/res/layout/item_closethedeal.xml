<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="#FBFBFB">

    <ImageView
        android:id="@+id/img_item_closethedeal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/shouchuan" />

    <TextView
        android:id="@+id/tv_item_closethedeal_name"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="产品名称ESTEE产品名称ESTEE产品"
        android:textColor="#333333"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_item_closethedeal_title"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="40dp"
        android:text="产品名称ESTEE产品名称ESTEE产品"
        android:textColor="#999999"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="X1"
        android:textColor="#ff333333"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="66dp"
        android:text="¥"
        android:textColor="#ffff0000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_item_closethedeal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="64dp"
        android:text="866999.00"
        android:textColor="#ffff0000"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="41dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="64dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/lll" />

    <TextView
        android:id="@+id/tv_item_closethedeal_shouhou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:layout_marginRight="25dp"
        android:text="申请售后"
        android:textColor="#ff999999"
        android:textSize="8sp" />
</RelativeLayout>