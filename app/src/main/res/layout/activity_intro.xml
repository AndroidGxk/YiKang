<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.myaccount.IntroActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_intro"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/toolbar">

        <ImageView
            android:id="@+id/img_activity_intro_fanhui"
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:src="@drawable/fanhuiactivity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="个人简介"
            android:textColor="#000000"
            android:textSize="19sp" />

    </android.support.v7.widget.Toolbar>


    <EditText
        android:id="@+id/et_intro_activity_intro"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/toolbar_activity_intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/seek_edi_shape"
        android:gravity="left"
        android:hint="请输入个人简介"
        android:maxLength="200"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_intro_activity_intro"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="11dp"
        android:text="限2-200个字符"
        android:textColor="#ff999999"
        android:textSize="9sp" />


    <TextView
        android:id="@+id/baocun_text"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shop_btn_shape"
        android:gravity="center"
        android:text="保存"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</RelativeLayout>