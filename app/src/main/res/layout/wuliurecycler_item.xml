<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp">

    <LinearLayout
        android:id="@+id/wuliu_img_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wuliu_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wuliu_qiu" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/wuliu_xian_shape" />
    </LinearLayout>

    <TextView
        android:id="@+id/wuliu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/wuliu_img_linear"
        android:text="订单已经打印完毕，正在拣货中"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/wuliu_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wuliu_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/wuliu_img_linear"
        android:text="2019-04-23    12:30:29"
        android:textColor="#ff999999"
        android:textSize="10sp" />
</RelativeLayout>